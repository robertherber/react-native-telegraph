{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "jsx": "react",
    "lib": ["dom", "esnext"],
    "moduleResolution": "node",
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "strict": true,
    "declaration": true,
    "outDir": "./",
    "module": "ESNext",
    "target": "ES2019"
  },
  "include": [
    "src"
  ],
  "exclude": [
    "lib",
    "example/lib",
    "example"
  ]
}
